<%= javascript_include_tag "https://www.google.com/jsapi", "chartkick" %>
<center><h1>Engineering Library Usage Data</h1></center><br/>
<h1>Data Summary</h1>

     <% floor1Count = 0
        floor0Count = 0
        gamerChairCount = 0
        carrelCount = 0
        beanBagCount = 0
        groupRoomCount = 0
        generalComputersCount = 0
        groupSeatingCount = 0
        computerLabCount = 0
        comfyChairsCount = 0
    %>
    <% @students.each do |student|   
        case student.floor
            when 0
                floor0Count = floor0Count + 1
            when 1
                floor1Count = floor1Count + 1
            else
        end
      
        case student.seating_area
            when 'Study Carrels'
                carrelCount = carrelCount + 1
            when "Gamer Chair"
                gamerChairCount = gamerChairCount + 1
            when "computerLabTotal"
                computerLabCount = computerLabCount + 1
            when "studyRoomTotal"
                groupRoomCount = groupRoomCount + 1
            when "Bean Bag Chair"
                beanBagCount = beanBagCount + 1
            when "Comfy Chair" || "comfyChairs1Total" || "comfyChairs2Total"
                comfyChairsCount = comfyChairsCount + 1
            when "desktops1Total"
                generalComputersCount = generalComputersCount + 1
            when "generalSeating1Total" || "generalSeating2Total"
                groupSeatingCount = groupSeatingCount + 1
            else
                
        end
        
        case student.technology
            when "meh"
                @ok = 0
            else
                
        end
        
        case student.activity
            when "Working w/ Staff"
                student.destroy
            else
        end
   
     end %>

    <table id="summary">
        <tr>
            <td></td>
            <td>Total</td>
        </tr>
        <tr>
            <td>Floor 0</td>
            <td><%= floor0Count %></td>
        </tr>
        <tr>
            <td>Floor 1</td>
            <td><%= floor1Count %></td>
        </tr>
        <tr>
            <td>Gamer Chair</td>
            <td><%= gamerChairCount %></td>
        </tr>
    </table>

<h1>Floor</h1>
<%= bar_chart Student.group(:floor).count %>

<h1>Seating</h1>
<%= bar_chart Student.group(:seating_area).count %>

<h1>Technology</h1>
<%= bar_chart Student.group(:technology).count %>

<h1>Activity</h1>
<%= bar_chart Student.group(:activity).count %>
